<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    tools:context=".Kalkulator">


    <EditText
        android:id="@+id/angka1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/angka2"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:inputType="number"
        android:layout_above="@+id/bersih"
        android:layout_below="@+id/angka1"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="92dp"
        android:text="" />

    <Button
        android:id="@+id/tambah"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bersih"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/kurang"
        android:layout_toLeftOf="@+id/kurang"
        android:text="+" />

    <Button
        android:id="@+id/kurang"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bersih"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="14dp"
        android:layout_toStartOf="@+id/kali"
        android:layout_toLeftOf="@+id/kali"
        android:text="-" />

    <Button
        android:id="@+id/kali"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bersih"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="16dp"
        android:layout_toStartOf="@+id/bagi"
        android:layout_toLeftOf="@+id/bagi"
        android:text="*" />

    <Button
        android:id="@+id/bagi"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bersih"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="15dp"
        android:text="/" />

    <Button
        android:id="@+id/bersih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/hasil"
        android:layout_marginBottom="23dp"
        android:text="bersihkan" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="149dp"
        android:layout_height="32dp"
        android:layout_above="@+id/tv_hasil"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="107dp"
        android:layout_marginLeft="107dp"
        android:layout_marginEnd="123dp"
        android:layout_marginRight="123dp"
        android:layout_marginBottom="21dp"
        android:text="hasil"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_hasil"
        android:layout_width="111dp"
        android:layout_height="49dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="129dp"
        android:layout_marginLeft="129dp"
        android:layout_marginEnd="139dp"
        android:layout_marginRight="139dp"
        android:layout_marginBottom="290dp"
        android:text="X" />


</RelativeLayout>